<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
<% @users.each do |user| %>
    <li>
      <%= image_tag "#{user.picture.url if user.picture?}" , class: "user__imgframe", alt: "user_icon" %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
    </li>
<% end %>
</ul>