<h2>Add New Post</h2>
<div class="container">
  <%= form_for :post, url: posts_path do |f| %>
    <%= f.label :name, "施設名" %>
    <%= f.text_area :name, class: 'form-control'%>
    
    <%= f.label :place, "場所" %>
    <%= f.select :place, [["晴れ", "晴れ"], ["曇り", "曇り"], ["雨", "雨"], ["雪", "雪"], ["その他", "その他"]], include_blank: "選択して下さい" %>
    
    <%= f.label :content, "感想" %>
    <%= f.text_area :content, class: 'form-control'%>
    
    <%= f.submit "投稿", class: "btn btn-info btn-xl" %>
    <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
  <% end %>
</div>