<% if !current_user?(post.user) %>
  <div class="like">
    <div id="like-link-<%= post.id %>">
      <% if current_user.likes.find_by(post_id: post.id) %>
        <%= link_to unlike_path(post.id), method: :delete, remote: true do %>
          <%= button_tag(class: "btn") do %>
  　　　    <%= content_tag :span, "", class: "glyphicon glyphicon-heart", style: "font-size: 30px; color:red;" %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to like_path(post.id), method: :post, remote: true do %>
          <%= button_tag(class: "btn") do %>
  　　　     <%= content_tag :span, "", class: "glyphicon glyphicon-heart-empty", style: "font-size: 30px; color:red;" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>